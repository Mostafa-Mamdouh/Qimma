@{
    ViewData["Title"] = "Restore Password";
}


<div class="restore-page-container d-flex justify-content-center align-items-center">
    <div class="d-flex flex-column justify-content-center align-items-center restore-block p-5">
        <h2 class="mb-3">Forgot your password?</h2>
        <div class="restore-instructions text-start">
            <p>Change your password in three easy steps. This will help you to secure your password!</p>
            <ol>
                <li>بالعربي نكتب هما</li>
                <li>Enter your email address below.</li>
                <li>Our system will send you a temporary link to your email.</li>
                <li>Use the link to reset your password</li>
            </ol>
        </div>
        <form class="w-100 mt-4">
            <div class="">
                <div class="form-group">
                    <label for="email-for-pass">Enter your email address</label>
                    <input class="form-control" type="text" id="email-for-pass" required="">
                </div>
            </div>
            <div class="d-block my-3">
                <button class="btn btn-gold" type="submit">Get New Password</button>
                @Html.ActionLink("Back to Login", "Login", "Home", null, new { id="", @class = "btn btn-secondary" })
            </div>
        </form>
    </div>
</div>