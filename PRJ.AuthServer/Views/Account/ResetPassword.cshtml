@model ResetPasswordViewModel

@{
    ViewBag.Title = "User Login";
}

<link href="~/assets/css2/login.css" rel="stylesheet" />

<div class="sideloginform">
    <img src="~/assets/imgs/nrrclogo-v.svg" class="logoLoginForm w-25 mx-auto mb-3" alt="" />
    <h1>Reset Password</h1>
    <form method="post">
        <input asp-for="Token" type="hidden" />
        <input asp-for="Email" type="hidden" />
        @{
            if (ViewBag.HaveError != null)
            {
                if (ViewBag.HaveError)
                {
                    <div id="authError" class="alert alert-danger text-center">
                        <i class="fa-solid fa fa-times-circle"></i>&nbsp;
                        <div asp-validation-summary="All"> </div>
                    </div>
                }
            }
        }
        <div class="my-3 row">
            <div class="form-floating">
                <input asp-for="Password" class="form-control" />
                <label for="Password">Password</label>
            </div>
            <h6 id="passcheck" class="text-danger">
                <span asp-validation-for="Password" class="text-danger"></span>
            </h6>
        </div>
        <div class="my-3 row">
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" />
                <label for="ConfirmPassword">Confirm Password</label>
            </div>
            <h6 id="passcheck" class="text-danger">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </h6>
        </div>

        <input id="submit" type="submit" value="Reset" class="btn btn-gold w-100 my-2" />
    </form>


</div>

<div class="sidelogin">
    <img src="~/nrrclogo-white.svg" class="w-50 mx-auto d-block mt-3" alt="" />
</div>